@using AnimeFigureProject.EntityModels;
@model AnimeFigureProject.WebApp.Models.AllAnimeFiguresModel
@{
    ViewData["Title"] = "Catalog";
}

<link rel="stylesheet" href="~/css/MainCatalog.css" asp-append-version="true" />

<div class="FilterBar">

    <h3>Brand</h3>

    @foreach(Brand brand in Model.Brands)
    {

        <input id = "@brand.Id" type = "checkbox" />
        <label>@brand.Name</label>
        
    }

    <h3>Origin</h3>

    @foreach (Origin origin in Model.Origins)
    {

        <input id="@origin.Id" type="checkbox" />
        <label>@origin.Name</label>

    }

    <h3>Category</h3>

    @foreach (Category category in Model.Categories)
    {

        <input id="@category.Id" type="checkbox" />
        <label>@category.Name</label>

    }

    <h3>Year of release</h3>

    <h3>Price</h3>

    <h3>Value</h3>

</div>

<div class="Results">

    <div class="SearchBar">

        <input type="text" id="SearchbarInput" name="MainSearchbar" placeholder="Search">    
        <a asp-action="Create"><input type="button" class="btn btn-primary" value="ADD NEW"></a>

    </div>

    <div class="AnimeFigureList">

        @foreach (AnimeFigure animeFigure in Model.AnimeFigures)
        {

            <a asp-action="Details" asp-route-id="@animeFigure.Id">

                <div class="card border-secondary mb-3" style="max-width: 20rem;">

                    <img src="@Url.Action("GetImage", "Catalog", new { imageFolderPath = animeFigure.ImageFolderPath})" />
                
                    <div class="card-body">

                        <h4 class="card-title">@animeFigure.Name</h4>
                        <p class="card-text">Price: @animeFigure.Price <br />Value: @animeFigure.Value</p>

                    </div>

                </div>

            </a>
            
        }

    </div>

</div>

<script src="~/js/MainCatelog.js"></script>
