@model IEnumerable<AnimeFigureProject.EntityModels.Collection>
@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/MainCollection.css" asp-append-version="true" />

<div class="CreateBar">

    <form asp-action="Create">

        <input type="text" id="NameInput" name="name" placeholder="Collection name...">
        <input type="submit" class="btn btn-secondary" value="Create">

    </form>

</div>

<table class="table">

    <thead>

        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.TotalValue)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.OwnerId)
            </th>

            <th></th>

        </tr>

    </thead>

    <tbody>

    @foreach (var item in Model) {
        
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.TotalValue)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.OwnerId)
            </td>
            
            <td>

                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

            </td>
        
        </tr>
}
    </tbody>
    
</table>
